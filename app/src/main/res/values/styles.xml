<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/TransicionActitity</item>
    </style>

    <style name="TransicionActitity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_righttop_to_leftbottom_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_righttop_to_leftbottom_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_to_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_to_left_exit</item>
    </style>

</resources>
